<%- include('partials/header') -%>

  <div class="container-fluid bg-light py-5">
    <div class="container">
      <div class="row">
        <!-- User Info and Add Recipe Form -->
        <div class="col-lg-4 mb-4">
          <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
              <h2 class="card-title h4 mb-4">User Profile</h2>
              <p><strong>User Name:</strong> <%= user.userName %></p>
              <p><strong>Email:</strong> <%= user.email %></p>
              <a href="/logout" class="btn btn-primary w-100">Logout</a>
            </div>
          </div>
  
          <div class="card shadow-sm border-0">
            <div class="card-body">
              <h2 class="card-title h4 mb-4">Add a Recipe</h2>
              <form action="/recipe/createRecipe" enctype="multipart/form-data" method="POST">
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                  <label for="cookTime" class="form-label">Cook Time</label>
                  <input type="text" class="form-control" id="cookTime" name="cookTime" required>
                </div>
                <div class="mb-3">
                  <label for="prepTime" class="form-label">Prep Time</label>
                  <input type="text" class="form-control" id="prepTime" name="prepTime" required>
                </div>
                <div class="mb-3">
                  <label for="servings" class="form-label">Servings</label>
                  <input type="number" class="form-control" id="servings" name="servings" required>
                </div>
                <div class="mb-3">
                  <label for="ingredients" class="form-label">Ingredients (one ingredient per line)</label>
                  <textarea class="form-control" id="ingredients" name="ingredients" rows="5" required></textarea>
                </div>
                <div class="mb-3">
                  <label for="directions" class="form-label">Directions (one step per line)</label>
                  <textarea class="form-control" id="directions" name="directions" rows="5" required></textarea>
                </div>
                <div class="mb-3">
                  <label for="imageUpload" class="form-label">Image</label>
                  <input type="file" class="form-control" id="imageUpload" name="file" required>
                </div>
                <button type="submit" class="btn btn-primary w-100" value="Upload">Submit Recipe</button>
              </form>
            </div>
          </div>
        </div>
  
        <!-- User's Recipes -->
        <div class="col-lg-8">
          <h2 class="h3 mb-4">Your Recipes</h2>
          <div class="row g-4">
            <% for(var i=0; i<recipes.length; i++) { %>
              <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                  <div class="recipe-image-container">
                    <img src="<%= recipes[i].image%>" class="card-img-top recipe-image" alt="<%= recipes[i].name %>">
                  </div>
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title flex-grow-1"><%= recipes[i].name %></h5>
                    <a href="/recipe/<%= recipes[i]._id%>" class="btn btn-outline-primary w-100">View Recipe</a>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
          <div class="text-center mt-5">
            <a class="btn btn-primary" href="/feed">Return to Feed</a>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('partials/footer') -%>