<%- include('partials/header') -%>

<body>

<div class="container-fluid bg-light py-5">
  <div class="container">
    <div class="row mb-4">
      <div class="col-12 d-flex justify-content-between align-items-center">
        <h1 class="h2">RecipeShare Feed</h1>
        <a href="/profile" class="btn btn-primary">Back to Profile</a>
      </div>
    </div>
    <div class="row g-4">
      <% for(var i=0; i<recipes.length; i++) { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm border-0">
            <div class="recipe-image-container">
              <img src="<%= recipes[i].image%>" class="card-img-top recipe-image" alt="<%= recipes[i].name %>">
            </div>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title flex-grow-1"><%= recipes[i].name %></h5>
              <p class="card-text">
                <small class="text-muted">
                  Posted By: <%= recipes[i].user && recipes[i].user.userName ? recipes[i].user.userName : 'Unknown User' %>
                </small>
              </p>
              <a href="/recipe/<%= recipes[i]._id%>" class="btn btn-outline-primary w-100">View Recipe</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>